<Application x:Class="SampleApplicationView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SampleApplicationView"
             xmlns:viewModel="clr-namespace:SampleApplicationViewModel;assembly=SampleApplicationViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <viewModel:MainWindowViewModel x:Key="MainWindowViewModel" />

         <!--Whenever MoneyViewModel instance is bound inside ContentPresenter, it it displayed correctly.-->
         <DataTemplate DataType="{x:Type viewModel:MoneyViewModel}">
             <Label Content="{Binding DisplayValue}" ContentStringFormat="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ContentStringFormat}" />
         </DataTemplate>
    </Application.Resources>
</Application>
